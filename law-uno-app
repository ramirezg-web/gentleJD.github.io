import React, { useState, useEffect } from "react";
import { Card, CardContent } from "./components/Card";
import { Button } from "./components/Button";
import { Plus, Trash2, Play, RotateCcw, Check, X, Upload } from "lucide-react";
import SAMPLE_CARDS from "./law_uno_study";
import ImageUploader from "./components/ImageUploader";

const COLORS = ["red", "blue", "green", "yellow"];

// Simple storage shim using localStorage
const storage = {
  async get(key: string) {
    const v = localStorage.getItem(key);
    return v ? { value: v } : null;
  },
  async set(key: string, value: string) {
    localStorage.setItem(key, value);
  },
};

export default function LegalUno() {
  const [cards, setCards] = useState<any[]>([]);
  const [currentCard, setCurrentCard] = useState<any | null>(null);
  const [showAnswer, setShowAnswer] = useState(false);
  const [score, setScore] = useState({ correct: 0, incorrect: 0 });
  const [isPlaying, setIsPlaying] = useState(false);
  const [isEditing, setIsEditing] = useState(true);
  const [newCard, setNewCard] = useState({
    question: "",
    answer: "",
    color: "red",
    category: "",
  });
  const [filter, setFilter] = useState("all");

  useEffect(() => {
    loadCards();
  }, []);

  const loadCards = async () => {
    try {
      const result = await storage.get("law-uno-cards");
      if (result) {
        setCards(JSON.parse(result.value));
      } else {
        // First run: preload the SAMPLE_CARDS so the UI shows them
        const initial = SAMPLE_CARDS.map((c) => ({
          ...c,
          id: Date.now() + Math.random(),
        }));
        setCards(initial);
        await storage.set("law-uno-cards", JSON.stringify(initial));
      }
    } catch (e) {
      console.log("no cards", e);
    }
  };

  const saveCards = async (updatedCards: any[]) => {
    await storage.set("law-uno-cards", JSON.stringify(updatedCards));
  };

  const loadSampleCards = () => {
    const updatedCards = [
      ...cards,
      ...SAMPLE_CARDS.map((card) => ({
        ...card,
        id: Date.now() + Math.random(),
      })),
    ];
    setCards(updatedCards);
    saveCards(updatedCards);
  };

  const handleGeneratedCards = (generated: any[]) => {
    const mapped = generated.map((c) => ({
      ...c,
      id: Date.now() + Math.random(),
    }));
    const updated = [...cards, ...mapped];
    setCards(updated);
    saveCards(updated);
  };

  const addCard = () => {
    if (newCard.question.trim() && newCard.answer.trim()) {
      const updatedCards = [...cards, { ...newCard, id: Date.now() }];
      setCards(updatedCards);
      saveCards(updatedCards);
      setNewCard({ question: "", answer: "", color: "red", category: "" });
    }
  };

  const deleteCard = (id: any) => {
    const updatedCards = cards.filter((c) => c.id !== id);
    setCards(updatedCards);
    saveCards(updatedCards);
  };

  const startGame = () => {
    const filteredCards =
      filter === "all" ? cards : cards.filter((c) => c.category === filter);
    if (filteredCards.length === 0) return;
    setIsPlaying(true);
    setIsEditing(false);
    setScore({ correct: 0, incorrect: 0 });
    drawCard(filteredCards);
  };

  const drawCard = (cardSet: any[] | null = null) => {
    const availableCards =
      cardSet ||
      (filter === "all" ? cards : cards.filter((c) => c.category === filter));
    const randomCard =
      availableCards[Math.floor(Math.random() * availableCards.length)];
    setCurrentCard(randomCard);
    setShowAnswer(false);
  };

  const handleAnswer = (isCorrect: boolean) => {
    setScore((prev) => ({
      ...prev,
      [isCorrect ? "correct" : "incorrect"]:
        prev[isCorrect ? "correct" : "incorrect"] + 1,
    }));
    setTimeout(() => drawCard(), 600);
  };

  const resetGame = () => {
    setIsPlaying(false);
    setIsEditing(true);
    setCurrentCard(null);
    setScore({ correct: 0, incorrect: 0 });
  };

  const getColorClass = (color: string) => {
    const colorMap: Record<string, string> = {
      red: "bg-red-600",
      blue: "bg-blue-600",
      green: "bg-green-600",
      yellow: "bg-yellow-500",
    };
    return colorMap[color] || colorMap.red;
  };

  const categories = [...new Set(cards.map((c) => c.category).filter(Boolean))];

  return (
    <div className="min-h-screen bg-gradient-to-br from-red-500 via-yellow-500 to-green-500 p-4 md:p-8">
      <div className="max-w-4xl mx-auto">
        <h1 className="text-4xl md:text-5xl font-bold text-white text-center mb-2 drop-shadow-lg">
          Honorable NWJ UNO üéì
        </h1>
        <p className="text-white text-center mb-6 text-base md:text-lg">
          Uno themed flash cards based on the beautiful mind's outlines! ‚öñÔ∏è
        </p>

        {isEditing && (
          <Card className="mb-8 bg-white/95 backdrop-blur">
            <CardContent className="p-4 md:p-6">
              <h2 className="text-xl md:text-2xl font-bold mb-4 text-gray-800">
                Study Deck Builder
              </h2>
              {cards.length === 0 && (
                <div className="mb-6 p-4 bg-blue-50 border-2 border-blue-200 rounded-lg">
                  <h3 className="font-bold text-blue-900 mb-2">
                    üëã Get Started!
                  </h3>
                  <p className="text-blue-800 mb-3 text-sm">
                    Load sample cards from your outlines or create your own
                    custom cards.
                  </p>
                  <Button
                    onClick={loadSampleCards}
                    className="w-full bg-blue-600 hover:bg-blue-700 text-white"
                  >
                    <Upload className="mr-2" size={18} />
                    Load Sample Cards from Outlines
                  </Button>
                  <ImageUploader onGenerated={handleGeneratedCards} />
                </div>
              )}

              <div className="space-y-4">
                <div>
                  <label className="block text-sm font-semibold mb-2 text-gray-700">
                    Question / Legal Term
                  </label>
                  <textarea
                    rows={2}
                    value={newCard.question}
                    onChange={(e) =>
                      setNewCard({ ...newCard, question: e.target.value })
                    }
                    className="w-full p-3 border-2 border-gray-300 rounded-lg focus:border-blue-500 focus:outline-none text-sm md:text-base"
                    placeholder="e.g., What is habeas corpus?"
                  />
                </div>

                <div>
                  <label className="block text-sm font-semibold mb-2 text-gray-700">
                    Answer / Definition
                  </label>
                  <textarea
                    rows={3}
                    value={newCard.answer}
                    onChange={(e) =>
                      setNewCard({ ...newCard, answer: e.target.value })
                    }
                    className="w-full p-3 border-2 border-gray-300 rounded-lg focus:border-blue-500 focus:outline-none text-sm md:text-base"
                    placeholder="e.g., A writ requiring a person to be brought before a judge..."
                  />
                </div>

                <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div>
                    <label className="block text-sm font-semibold mb-2 text-gray-700">
                      Category (Optional)
                    </label>
                    <input
                      value={newCard.category}
                      onChange={(e) =>
                        setNewCard({ ...newCard, category: e.target.value })
                      }
                      className="w-full p-3 border-2 border-gray-300 rounded-lg focus:border-blue-500 focus:outline-none text-sm md:text-base"
                      placeholder="e.g., Civil Procedure"
                    />
                  </div>
                  <div>
                    <label className="block text-sm font-semibold mb-2 text-gray-700">
                      Card Color
                    </label>
                    <div className="flex gap-2">
                      {COLORS.map((color) => (
                        <button
                          key={color}
                          onClick={() => setNewCard({ ...newCard, color })}
                          className={`flex-1 h-12 rounded-lg ${getColorClass(
                            color
                          )} ${
                            newCard.color === color
                              ? "ring-4 ring-white shadow-lg scale-105"
                              : ""
                          } transition-all`}
                        />
                      ))}
                    </div>
                  </div>
                </div>

                <Button
                  onClick={addCard}
                  className="w-full bg-blue-600 hover:bg-blue-700 text-white py-5 text-base md:text-lg"
                >
                  <Plus className="mr-2" size={20} /> Add Card
                </Button>
              </div>

              {cards.length > 0 && (
                <div className="mt-6">
                  <div className="flex justify-between items-center mb-3">
                    <h3 className="text-base md:text-lg font-bold text-gray-800">
                      Your Deck ({cards.length} cards)
                    </h3>
                    {categories.length > 0 && (
                      <select
                        value={filter}
                        onChange={(e) => setFilter(e.target.value)}
                        className="text-sm p-2 border-2 border-gray-300 rounded-lg focus:border-blue-500 focus:outline-none"
                      >
                        <option value="all">All Categories</option>
                        {categories.map((cat) => (
                          <option key={cat} value={cat}>
                            {cat}
                          </option>
                        ))}
                      </select>
                    )}
                  </div>
                  <div className="space-y-2 max-h-64 overflow-y-auto">
                    {(filter === "all"
                      ? cards
                      : cards.filter((c) => c.category === filter)
                    ).map((card) => (
                      <div
                        key={card.id}
                        className={`p-3 rounded-lg ${getColorClass(
                          card.color
                        )} text-white flex justify-between items-start`}
                      >
                        <div className="flex-1 text-sm md:text-base">
                          {card.category && (
                            <span className="text-xs bg-white/20 px-2 py-1 rounded mb-1 inline-block">
                              {card.category}
                            </span>
                          )}
                          <p className="font-semibold">{card.question}</p>
                        </div>
                        <button
                          onClick={() => deleteCard(card.id)}
                          className="ml-3 p-2 hover:bg-white/20 rounded"
                        >
                          <Trash2 size={18} />
                        </button>
                      </div>
                    ))}
                  </div>
                </div>
              )}

              {cards.length > 0 && (
                <Button
                  onClick={startGame}
                  className="w-full mt-6 bg-green-600 hover:bg-green-700 text-white py-5 text-lg md:text-xl font-bold"
                >
                  <Play className="mr-2" size={24} /> Start Studying
                  {filter !== "all" ? ` ${filter}` : ""}!
                </Button>
              )}
            </CardContent>
          </Card>
        )}

        {isPlaying && currentCard && (
          <div className="space-y-4 md:space-y-6">
            <div className="flex justify-between items-center bg-white/90 backdrop-blur rounded-lg p-3 md:p-4">
              <div className="text-center flex-1">
                <p className="text-xs md:text-sm text-gray-600">Correct</p>
                <p className="text-2xl md:text-3xl font-bold text-green-600">
                  {score.correct}
                </p>
              </div>
              <div className="text-center flex-1">
                <p className="text-xs md:text-sm text-gray-600">Incorrect</p>
                <p className="text-2xl md:text-3xl font-bold text-red-600">
                  {score.incorrect}
                </p>
              </div>
              <div className="text-center flex-1">
                <p className="text-xs md:text-sm text-gray-600">Total</p>
                <p className="text-2xl md:text-3xl font-bold text-blue-600">
                  {score.correct + score.incorrect}
                </p>
              </div>
            </div>

            <div
              className={`${getColorClass(
                currentCard.color
              )} rounded-3xl p-4 md:p-8 shadow-2xl transform transition-all cursor-pointer hover:scale-105 active:scale-95`}
              onClick={() => setShowAnswer(!showAnswer)}
            >
              <div className="bg-white rounded-2xl p-4 md:p-8 min-h-[250px] md:min-h-[300px] flex flex-col justify-center">
                {currentCard.category && (
                  <div className="text-center mb-2">
                    <span className="text-xs md:text-sm bg-gray-100 px-3 py-1 rounded-full text-gray-600 font-semibold">
                      {currentCard.category}
                    </span>
                  </div>
                )}
                <h3 className="text-xl md:text-2xl font-bold text-gray-800 mb-3 md:mb-4 text-center">
                  {showAnswer ? "Answer" : "Question"}
                </h3>
                <p className="text-base md:text-xl text-gray-700 text-center leading-relaxed whitespace-pre-line">
                  {showAnswer ? currentCard.answer : currentCard.question}
                </p>
                {!showAnswer && (
                  <p className="text-xs md:text-sm text-gray-500 text-center mt-4 md:mt-6 italic">
                    Tap card to reveal answer
                  </p>
                )}
              </div>
            </div>

            {showAnswer && (
              <div className="flex gap-3 md:gap-4">
                <Button
                  onClick={() => handleAnswer(false)}
                  className="flex-1 bg-red-600 hover:bg-red-700 text-white py-6 md:py-8 text-base md:text-xl"
                >
                  <X className="mr-2" size={20} />{" "}
                  <span className="hidden md:inline">Need More Practice</span>
                  <span className="md:hidden">Wrong</span>
                </Button>
                <Button
                  onClick={() => handleAnswer(true)}
                  className="flex-1 bg-green-600 hover:bg-green-700 text-white py-6 md:py-8 text-base md:text-xl"
                >
                  <Check className="mr-2" size={20} />{" "}
                  <span className="hidden md:inline">Got It Right!</span>
                  <span className="md:hidden">Correct</span>
                </Button>
              </div>
            )}

            <Button
              onClick={resetGame}
              className="w-full bg-gray-700 hover:bg-gray-800 text-white py-3 md:py-4"
            >
              <RotateCcw className="mr-2" size={20} /> Back to Deck
            </Button>
          </div>
        )}
      </div>
    </div>
  );
}
